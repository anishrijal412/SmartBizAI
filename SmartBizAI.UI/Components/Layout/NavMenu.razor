@inject ApiAuthenticationStateProvider AuthProvider
@inject NavigationManager Navigation

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">SmartBizAI</a>
        <AuthorizeView>
            <Authorized>
                <button class="btn btn-sm btn-outline-light" @onclick="Logout">Logout</button>
            </Authorized>
            <NotAuthorized>
                <a class="btn btn-sm btn-outline-light" href="login">Login</a>
            </NotAuthorized>
        </AuthorizeView>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="dashboard" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Dashboard
            </NavLink>
        </div>

        <AuthorizeView Roles="Admin,Manager">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="management/employees">
                    <span class="bi bi-people-fill-nav-menu" aria-hidden="true"></span> Employees
                </NavLink>
            </div>
        </AuthorizeView>

        <AuthorizeView Roles="Admin,Manager,Accountant">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="management/products">
                    <span class="bi bi-box-seam-nav-menu" aria-hidden="true"></span> Products
                </NavLink>
            </div>
        </AuthorizeView>

        <AuthorizeView Roles="Admin,Accountant,Manager">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="accounting/income">
                    <span class="bi bi-cash-stack-nav-menu" aria-hidden="true"></span> Income
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="accounting/expenses">
                    <span class="bi bi-receipt-nav-menu" aria-hidden="true"></span> Expenses
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="accounting/invoices">
                    <span class="bi bi-file-earmark-text-nav-menu" aria-hidden="true"></span> Invoices
                </NavLink>
            </div>
        </AuthorizeView>

        <AuthorizeView>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="ai/chat">
                    <span class="bi bi-chat-dots-nav-menu" aria-hidden="true"></span> AI Assistant
                </NavLink>
            </div>
        </AuthorizeView>
    </nav>
</div>

@code {
    private async Task Logout()
    {
        await AuthProvider.MarkUserAsLoggedOut();
        Navigation.NavigateTo("login");
    }
}
